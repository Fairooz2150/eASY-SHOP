<section>
  <div class="container-fluid pl-5 pr-5" style="background-color: grey;">
    <div class="container-fluid ml-2 mr-2" style="background-color: white;">
      <div class="row pt-5">

        <div class="left-content col-12 pl-5 pr-5 col-md-5">
          <div class="card pl-2 pt-1 pr-2 text-center" style="background-color: grey;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                {{#each images}}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"
                  class="{{#if @first}}active{{/if}}"></li>
                {{/each}}
              </ol>
              <div class="carousel-inner">
                {{#each images}}
                <div class="carousel-item {{#if @first}}active{{/if}}">
                  <img class="d-block w-100" src="/product-images/{{this}}" alt="Slide {{@index}}">
                </div>
                {{/each}}
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <div class="text-center pt-3 pb-2">
              <button type="button" class="btn btn-primary btn-lg mt-1" style="min-width: 10rem; max-width: 15rem;">
                <div>Add to Cart</div>
              </button>
              <button type="button" class="btn btn-secondary btn-lg mt-1" style="min-width: 10rem; max-width: 15rem;">
                <div class="pr-3 pl-3">Buy now</div>
              </button>
            </div>
          </div>
        </div>





        <div class="col-md-7 overflow-hidden pl-5" id="textContent">
