<section>
    <div class="container mt-4">
        <table class="table" id="usersTable">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Email</th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row">{{incrementedIndex @index}}</th>
                    <td>{{this.First_Name}} {{this.Last_Name}}</td>
                    <td>{{this.Gender}}</td>
                    <td>{{this.Phone}}</td>
                    <td>{{this.Email}}</td>
                    <td>
                     <button class="btn btn-danger" onclick="deleteUser('{{this._id}}',  '{{this.First_Name}}', '{{this.Last_Name}}')">Remove</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Confirmation Modal -->
<div id="confirmationModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <p id="modalMessage">Are you sure?</p>
    <button id="confirmRemove" class="btn btn-danger">OK</button>
    <button id="cancelRemove" class="btn btn-secondary">Cancel</button>
  </div>
</div>

</section>

<script>
    
$(function () {
      $('#usersTable').DataTable();
    });

// Function to show the confirmation modal
function showConfirmationModal(message, confirmCallback) {
  // Get the modal
  var modal = document.getElementById("confirmationModal");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

  // Get the confirm and cancel buttons
  var confirmButton = document.getElementById("confirmRemove");
  var cancelButton = document.getElementById("cancelRemove");

  // Set the modal message
  document.getElementById("modalMessage").innerText = message;

  // Show the modal
  modal.style.display = "block";

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks on confirm button
  confirmButton.onclick = function() {
    modal.style.display = "none";
    confirmCallback();
  }

  // When the user clicks on cancel button
  cancelButton.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
}

function deleteUser(UserId, FirstName, LastName) {
  showConfirmationModal(`Are you sure you want to remove ${FirstName} ${LastName}?`, function() {
    $.ajax({
      url: '/admin/delete-user/' + UserId,
      method: 'DELETE',
      success: function(response) {
        if (response.success) {
          console.log('User deleted successfully');
          location.reload(); // Refresh the page or update the DOM as needed
        } else {
          alert('Failed to delete the User');
        }
      },
      error: function(error) {
        console.error('Error:', error);
        alert('An error occurred while deleting User');
      }
    });
  });
}
  </script>
