<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center title">Add Products</h2>
                <form action="/admin/add-product" method="post" enctype="multipart/form-data" id="productForm">

                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control mb-1" placeholder="Enter product name" required>

                    <!-- Set Product Owner -->
                    <input type="text" name="Product_Owner" value="Admin" hidden>

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control mb-1" placeholder="Enter product category"
                        required>

                    <div class="row mb-1">

                        <div class="ml-3">
                            <label for=""> Actual Price</label>
                            <input type="number" name="Actual_Price" class="form-control" placeholder="Actual price"
                                required>
                        </div>

                        <div class="ml-3">
                            <label for="">Offer Percentage</label>
                            <input type="number" name="Offer_Percentage" class="form-control"
                                placeholder="Offer percentage" required>
                        </div>

                        <div class="ml-3">
                            <label for="">Offer Price</label>
                            <input type="number" name="Offer_Price" class="form-control" placeholder="Offer price"
                                required>
                        </div>

                        <div class="ml-3">
                            <label for="stock-count">Stock Count</label>
                            <input type="number" name="Stock_Count" class="form-control" id="stock-count"
                                placeholder="Stock count" required>
                        </div>

                    </div>

                    <label for="description">Description</label>
                    <textarea class="form-control mb-1" name="Description" rows="4" id="description"
                        placeholder="Enter product description" required></textarea>

                    <label for="imageContainer" id="images">Images: </label>
                    <div id="imageContainer" class="col-lg-6">
                        <!-- Input for the first image -->
                        <input type="file" name="Image" class="form-control mb-2" onchange="viewImage(event)" required>

                        <!-- Placeholder for the first image -->
                        <img src="" alt="" id="imgView" class="pt-3">
                    </div>

                    <div class="row mb-4">

                        <div class="mt-3 ml-auto">
                            <!-- Button to add more images -->
                            <button type="button" class="btn mb-2" id="addImage"><i class="bi bi-plus-square"></i>
                                Images <i class="bi bi-images"></i></button>
                        </div>

                        <div class="ml-auto">
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-success mt-4" id="submit">Submit</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event) {
        // Display the thumbnail image
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
        // Scroll down the page to show the 'addImage' button
        window.scrollTo(0, document.body.scrollHeight * 2);
    }

    document.getElementById('addImage').addEventListener('click', function () {
        var imageContainer = document.getElementById('imageContainer');
        var input = document.createElement('input');
        input.type = 'file';
        input.name = 'Image';
        input.className = 'form-control mb-2';
        imageContainer.appendChild(input);

        // Attach onchange event listener to the new input element
        input.addEventListener('change', function (event) {
            var img = document.createElement('img');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.width = '100px';
            img.style.height = 'auto';
            img.style.marginRight = '10px';
            imageContainer.appendChild(img);
            // Scroll down the page to show the 'addImage' button
            window.scrollTo(0, document.body.scrollHeight * 2);
        });
    });
</script>

<style>
    .title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 35px;
        font-weight: bold;
    }

    #images {
        font-weight: bold;
    }

    #imgView {
        width: 100px;
        height: auto;
    }

    #submit {
        background-image: linear-gradient(to right, #109545, rgb(2, 164, 89));
        border-radius: 20px;
        inline-size: 100px;
    }

    #submit:hover {
        background-image: linear-gradient(to left, #109545, rgb(2, 164, 89));
    }

    #addImage {
        padding: 10px 20px;
        background-color: #2480bd;
        color: white;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    #addImage::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 300%;
        padding-top: 300%;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        transform: translate(-70%, -50%) scale(0);
        opacity: 0;
        transition: transform 1s, opacity 1s;
    }

    #addImage:active::after {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
        transition: 0s;
    }
</style>