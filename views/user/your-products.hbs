<section>
    <div class="container mt-4">
         <div class="row mt-4">
        <a href="/sell-products" class="btn btn-success ml-auto">Sell Product</a>
      </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Item</th>                  
                    <th scope="col">Stock</th>
                    <th scope="col">Carted</th>
                    <th>Status</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{incrementedIndex @index}}</th>
                    <td>
                        <div class="row">
                            <div>
                                <img style="width: 70px; height: 75px;" src="/product-images/{{this._id}}_0.jpg" class="ml-2"
                                     alt="">
                            </div>
                        
                        <div class="product_details ml-3">
                            {{this.Name}} <br>
                            <span class="text-muted">{{this.Category}}</span> 

                        </div>
                        </div>
                    </td>
                   
                    <td>{{this.Stock_Count}}</td>
                    <td>{{this.Carted}}</td>
                    <td>{{this.Status}}</td>
                    <td>
                       
                       
                        
                          {{#ifEquals this.Status 'Approved'}}
                          <a href="/edit-user-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <button class="btn btn-danger" onclick="deleteUserProduct('{{this._id}}', '{{this.Name}}')">Delete</button>

                           {{else}} 
                        <a href="/edit-pending-product/{{this._id}}" class="btn btn-primary">Change</a>

                        <button class="btn btn-danger" onclick="deletePendingProduct('{{this._id}}', '{{this.Name}}')">Joke</button>
                        {{/ifEquals}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- Confirmation Modal -->
<div id="confirmationModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <p id="modalMessage">Are you sure?</p>
    <button id="confirmRemove" class="btn btn-danger">OK</button>
    <button id="cancelRemove" class="btn btn-secondary">Cancel</button>
  </div>
</div>

</section>

<script>
    $(function () {
        $('#productsTable').DataTable();
    });

 // Function to show the confirmation modal
function showConfirmationModal(message, confirmCallback) {
  // Get the modal
  var modal = document.getElementById("confirmationModal");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

  // Get the confirm and cancel buttons
  var confirmButton = document.getElementById("confirmRemove");
  var cancelButton = document.getElementById("cancelRemove");

  // Set the modal message
  document.getElementById("modalMessage").innerText = message;

  // Show the modal
  modal.style.display = "block";

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks on confirm button
  confirmButton.onclick = function() {
    modal.style.display = "none";
    confirmCallback();
  }

  // When the user clicks on cancel button
  cancelButton.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
}

function deleteUserProduct(productId, productName) {
  showConfirmationModal(`Are you sure you want to delete ${productName}?`, function() {
    $.ajax({
      url: '/delete-user-product/' + productId,
      method: 'DELETE',
      success: function(response) {
        if (response.success) {
          console.log('User Product deleted successfully');
          location.reload(); // Refresh the page or update the DOM as needed
        } else {
          alert('Failed to delete user product');
        }
      },
      error: function(error) {
        console.error('Error:', error);
        alert('An error occurred while deleting the product');
      }
    });
  });
}

function deletePendingProduct(productId, productName) {
  showConfirmationModal(`Are you sure you want to delete ${productName}?`, function() {
    $.ajax({
      url: '/delete-user-pendingprod/' + productId,
      method: 'DELETE',
      success: function(response) {
        if (response.success) {
          console.log('User pending Product deleted successfully');
          location.reload(); // Refresh the page or update the DOM as needed
        } else {
          alert('Failed to delete user pending product');
        }
      },
      error: function(error) {
        console.error('Error:', error);
        alert('An error occurred while deleting the pending product');
      }
    });
  });
}

</script>

