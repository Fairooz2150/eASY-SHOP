<section>

    <div class="container-fluid">

        <div class="pt-5 text-center">
            <h2 class="eASY">Your eASY Cart is empty</h2>
        </div>

        <div class="d-flex justify-content-center pb-3 col-12" id="img">
            <img src="/images/add-to-cart.png" alt="Empty Cart">
        </div>

        <div class="text-center mb-4 ">
            <p>Add Items to the Cart & Continue Shopping!</p>
            <a href="/" class="btn btn-primary" style=" color: white; border-radius: 20px;" id="addBtn"><b>Add Items <i
                        class="bi bi-cart3"></i></b> </a>
        </div>

        <!-- Advertisement section -->
        <a href="/">
            <div id="popup-sidebar" class="popup-sidebar" title="eASY Cart's Ad">
                <img id="popup-image" src="/images/cart-ad-1.gif" alt="eASY SHOP">
            </div>
        </a>

    </div>

</section>


<script>

    // Function for Advertisement
    function slidePopupSidebar() {
        const popupSidebar = document.getElementById('popup-sidebar');
        const popupImage = document.getElementById('popup-image');
        const imageUrls = [
            "/images/cart-ad-1.gif",
            "/images/cart-ad-2.gif"

        ];
        let currentIndex = 0;

        // Slide in the popup sidebar immediately
        popupSidebar.style.right = '0';
        // Slide out after 5 seconds
        setTimeout(() => {
            popupSidebar.style.right = '-300px';
        }, 5000);

        // Change image every 5 seconds
        setInterval(() => {
            currentIndex = (currentIndex + 1) % imageUrls.length;
            popupImage.src = imageUrls[currentIndex];
            // Slide in the popup sidebar
            popupSidebar.style.right = '0';
            // Slide out after 5 seconds
            setTimeout(() => {
                popupSidebar.style.right = '-300px';
            }, 5000);
        }, 10000);
    }

    // Call the slidePopupSidebar function when the page is loaded
    window.onload = slidePopupSidebar;

</script>

