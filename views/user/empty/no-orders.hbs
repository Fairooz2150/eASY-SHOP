        <div class="d-flex justify-content-center pb-5 col-12" id="img">
            <img src="/images/no-orders-1.png" alt="No Orders">
        </div>
        <div class="text-center ">
            <p>No orders yet. Explore our products and place your first order!</p>
            <a href="/" class="btn btn-primary " id="shop"><b><i class="bi bi-shop-window"></i> Shop</b> </a>
        </div>


        <!-- Advertisement section -->
        <a href="/">
            <div id="popup-sidebar" class="popup-sidebar" title="eASY Shop Ad">
                <img id="popup-image" src="/images/no-orders-Ad1.gif" alt="eASY SHOP">
            </div>
        </a>

    </div>

</section>


<script>

    // Function for Advertisement
    function slidePopupSidebar() {
        const popupSidebar = document.getElementById('popup-sidebar');
        const popupImage = document.getElementById('popup-image');
        const imageUrls = [
            "/images/no-orders-Ad1.gif",
            "/images/no-orders-Ad2.gif",
            "/images/no-orders-Ad3.gif"

        ];
        let currentIndex = 0;

        // Slide in the popup sidebar immediately
        popupSidebar.style.right = '0';
        // Slide out after 5 seconds
        setTimeout(() => {
            popupSidebar.style.right = '-300px';
        }, 5000);

        // Change image every 5 seconds
        setInterval(() => {
            currentIndex = (currentIndex + 1) % imageUrls.length;
            popupImage.src = imageUrls[currentIndex];
            // Slide in the popup sidebar
            popupSidebar.style.right = '0';
            // Slide out after 5 seconds
            setTimeout(() => {
                popupSidebar.style.right = '-300px';
            }, 5000);
        }, 10000);
    }

    // Call the slidePopupSidebar function when the page is loaded
    window.onload = slidePopupSidebar;

</script>

<style>
    .eASY {
        color: rgb(40, 155, 155);
    }

    /* Styles for the pop-up sidebar */
    .popup-sidebar {
        position: fixed;
        top: 50%;
        right: -300px;
        /* Initially hidden off-screen */
        width: 300px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(21, 105, 131, 0.5);
        z-index: 1000;
        transition: right 1s ease-in-out;
        padding: 20px;
        overflow: hidden;
    }

    .popup-sidebar img {
        display: block;
        width: 100%;
