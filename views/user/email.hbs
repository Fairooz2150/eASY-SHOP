<section>
     <div class="container" style="background-color: rgb(7, 158, 172); ">
            <div class="row mt-2">
       
            <div class="col-md-12 ">
                <div class=" mt-3 mb-5 p-5">
                    <h2 class="text-center pb-5" style="color: white;">Send Mail to Us</h2>

                    <form id="signupForm" action="/signup" method="post" class="" style="color: white;">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="firstName" >Name</label>
                                <input type="text" class="form-control" id="firstName" name="First_Name"
                                    placeholder="Full Name" required>
                            </div>
                            <div class="form-group col-md-4">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="Phone" placeholder="Phone" required>
                        </div>

                         <div class="form-group col-md-4">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Email Address"
                                required>
                        </div>
                        </div>
                         
                            <label for="subject">Subject</label>
                            <input type="text" class="form-control" id="subject" name="Subject" placeholder="Subject"
                                required>
                        
                        <label for="description" class="mt-3">Description</label>
                    <textarea class="form-control" name="Description" rows="5" id="description" placeholder="Enter product description" required></textarea>
                      
                        <button type="submit" class="btn btn-primary mt-3 " style="width: 100%;" id="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
     </div>
</section>


<script>

    $("#submit-form").submit((e) => {
        e.preventDefault()
        $.ajax({
            url: "https://script.google.com/macros/s/AKfycbzqAjLy5zZlbXfgGzXdO08hR22Ngw2o2jOXAD9EEqO5Fck-XWixBi39UWPABVCoK8tCFA/exec",
            data: $("#submit-form").serialize(),
            method: "post",
            success: function (response) {
                alert("Message send successfully")
                window.location.reload()

            },
            error: function (err) {
                alert("Something Error")

            }
        })
    })

</script>

