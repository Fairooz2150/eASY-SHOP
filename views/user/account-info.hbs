<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <title>Account Info</title>
</head>
<body>
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="container mt-5 pl-5">
                <h2 class="text-center pb-5">Account Info</h2>
                <form id="accountForm">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>First Name</label>
                            <input type="text" class="form-control" name="First_Name" value="{{user.First_Name}}" disabled>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="Last_Name" value="{{user.Last_Name}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" value="{{user.Email}}" disabled>
                    </div>
                    <div>
                        <button type="button" class="btn btn-danger float-left" id="deleteAccountBtn">Delete Account</button>
                        <button type="button" class="btn btn-primary float-right" id="editAccountBtn">Edit</button>
                        <button type="button" class="btn btn-success float-right" id="saveAccountBtn" style="display: none;">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Password Confirmation Modal -->
    <div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="passwordModalLabel">Confirm Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="passwordForm">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            // Enable form fields on Edit button click
            $('#editAccountBtn').click(function() {
                $('form input').prop('disabled', false);
                $('#editAccountBtn').hide();
                $('#saveAccountBtn').show();
            });

            // Save changes and disable fields again
            $('#saveAccountBtn').click(function() {
                const formData = $('#accountForm').serialize();

                $.ajax({
                    url: '/update-account',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('form input').prop('disabled', true);
                            $('#editAccountBtn').show();
                            $('#saveAccountBtn').hide();
                            alert('Account updated successfully'); 
                                                  
                             window.location.href = '/your-account';
                        } else {
                            alert('Error updating account');
                        }
                    }
                });
            });

            // Show password confirmation modal on Delete Account button click
            $('#deleteAccountBtn').click(function() {
                $('#passwordModal').modal('show');
            });

            // Handle password confirmation form submission
            $('#passwordForm').submit(function(e) {
                e.preventDefault();
                const password = $('#password').val();

                $.post('/verify-password', { password: password }, function(response) {
                    if (response.success) {
                        // Password verified, proceed with account deletion
                        $.post('/delete-account', function(deleteResponse) {
                            if (deleteResponse.success) {
                                alert('Account deleted successfully');
                                window.location.href = '/logout'; // Redirect to logout or homepage
                            } else {
                                alert('Error deleting account');
                            }
                        });
                    } else {
                        alert('Incorrect password');
                    }
                });
            });
        });
    </script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>