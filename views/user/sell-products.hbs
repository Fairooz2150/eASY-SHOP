<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Sell Your Product</h2>
                <form action="/add-product" method="post" enctype="multipart/form-data" id="productForm">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control">

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control">

                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control">

                    <label for="">Images</label>
                    <div id="imageContainer">
                        <input type="file" name="Image" class="form-control mb-2">
                    </div>
                    <button type="button" class="btn btn-primary mb-2" id="addImage">Add More Images</button>

                    <button type="submit" class="btn btn-success mt-4">Add Product</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('addImage').addEventListener('click', function() {
        var imageContainer = document.getElementById('imageContainer');
        var input = document.createElement('input');
        input.type = 'file';
        input.name = 'Image';
        input.className = 'form-control mb-2';
        imageContainer.appendChild(input);
    });
</script>
