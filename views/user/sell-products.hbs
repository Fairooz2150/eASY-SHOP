<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Sell Your Product</h2>
                <form action="/sell-product" method="post" enctype="multipart/form-data" id="productForm">
                    <label for="Name">Name</label>
                    <input type="text" name="Name" class="form-control" id="Name" placeholder="Enter product name"
                        required>

                    <!-- Hidden User Details -->
                    <input type="text" name="Product_Owner" value="User" hidden>
                    <input type="text" name="User_Id" value="{{user._id}}" hidden>
                    <input type="text" name="User_First_Name" value="{{user.First_Name}}" hidden>
                    <input type="text" name="User_Last_Name" value="{{user.Last_Name}}" hidden>

                    <!-- Hidden User Product Statuses -->
                    <input type="text" name="Status" value="Pending" hidden>
                    <input type="text" name="Updations" value="Never" hidden>

                    <label for="Category">Category</label>
                    <input type="text" name="Category" class="form-control" id="Category"
                        placeholder="Enter product category" required>

                    <div class="row">
                        <div class="ml-3">
                            <label for="actual-price">Actual Price</label>
                            <input type="number" name="Actual_Price" class="form-control" id="actual-price"
                                placeholder="Actual price" required>
                        </div>
                        <div class="ml-3">
                            <label for="offer-percentage">Offer Percentage</label>
                            <input type="number" name="Offer_Percentage" class="form-control" id="offer-percentage"
                                placeholder="Offer percentage" required>
                        </div>
                        <div class="ml-3">
                            <label for="offer-price">Offer Price</label>
                            <input type="number" name="Offer_Price" class="form-control" id="offer-price"
                                placeholder="Offer price" required>
                        </div>
                        <div class="ml-3">
                            <label for="stock-count">Stock Count</label>
                            <input type="number" name="Stock_Count" class="form-control" id="stock-count"
                                placeholder="Stock count" required>
                        </div>
                    </div>

                    <label for="description">Description</label>
                    <textarea class="form-control" name="Description" rows="3" id="description"
                        placeholder="Enter product description" required></textarea>

                    <h5 class="text-center mt-2">Product Enquiry Contact Information</h5>

                    <label for="shop-address">Shop Address</label>
                    <textarea class="form-control" name="Shop_Address" rows="3" id="shop-address"
                        placeholder="Enter shop address" required></textarea>

                    <div class="row">
                        <div class="ml-3">
                            <label for="email">Email</label>
                            <input type="email" name="Email" class="form-control" id="email" placeholder="Email address"
                                required>
                        </div>
                        <div class="ml-3">
                            <label for="phone">Phone</label>
                            <input type="tel" id="phone" name="Phone" pattern="[0-9]{10}" class="form-control"
                                placeholder="Phone number" required>
                        </div>
                        <div class="ml-3">
                            <label for="whatsapp">WhatsApp</label>
                            <input type="tel" id="whatsapp" name="Whatsapp" pattern="[0-9]{10}" class="form-control"
                                placeholder="WhatsApp number" required>
                        </div>
                    </div>

                    <label for="imageContainer" id="images">Images:</label>
                    <div id="imageContainer" class="col-lg-6">
                        <!-- Input for the first image -->
                        <input type="file" name="Image" class="form-control mb-2" onchange="viewImage(event)" required>
                        <!-- Placeholder for the first image -->
                        <img src="" alt="" id="imgView" class="pt-3">
                    </div>

                    <div class="row mb-4">
                        <div class="mt-3 ml-auto">
                            <!-- Button to add more images -->
                            <button type="button" class="btn  mb-2" id="addImage"><i class="bi bi-plus-square"></i>
                                Images <i class="bi bi-images"></i></button>
                        </div>

                        <div class="ml-auto">
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-success mt-4" id="submit">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event) {
        // Display the thumbnail image
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
        // Scroll down the page to show the 'addImage' button
        window.scrollTo(0, document.body.scrollHeight * 2);
    }

    document.getElementById('addImage').addEventListener('click', function () {
        var imageContainer = document.getElementById('imageContainer');
        var input = document.createElement('input');
        input.type = 'file';
        input.name = 'Image';
        input.className = 'form-control mb-2';
        imageContainer.appendChild(input);

        // Attach onchange event listener to the new input element
        input.addEventListener('change', function (event) {
            var img = document.createElement('img');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.width = '100px';
            img.style.height = 'auto';
            img.style.marginRight = '10px';
            imageContainer.appendChild(img);
            // Scroll down the page to show the 'addImage' button
            window.scrollTo(0, document.body.scrollHeight * 2);
        });
    });
</script>

<style>
    #images {
        font-weight: bold;
    }

    #imgView {
        width: 100px;
        height: auto
    }

    #submit {
        background-image: linear-gradient(to right, #109545, rgb(2, 164, 89));
        border-radius: 20px;
        inline-size: 100px;
    }

    #submit:hover {
        background-image: linear-gradient(to left, #109545, rgb(2, 164, 89));
    }

    #addImage {
        padding: 10px 20px;
        background-color: #2480bd;
        color: white;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    #addImage::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 300%;
        padding-top: 300%;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        transform: translate(-70%, -50%) scale(0);
        opacity: 0;
        transition: transform 1s, opacity 1s;
    }

    #addImage:active::after {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
        transition: 0s;
    }
</style>