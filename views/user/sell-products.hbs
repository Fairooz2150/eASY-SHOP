<section>
    <div class="container mt-4" >
        <div class="row" >
            <div class="col-md-12 ">
                <h2 class="text-center">Sell Your Products</h2>
                <form action="/sell-product" method="post" enctype="multipart/form-data" id="productForm">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control">
                    
                        <!-- Hidden User Details -->
                     <input type="text" name="Product_Owner" value="User" hidden>
                      <input type="text" name="User_Id" value="{{user._id}}" hidden>
                       <input type="text" name="User_First_Name" value="{{user.First_Name}}" hidden>
                        <input type="text" name="User_Last_Name" value="{{user.Last_Name}}" hidden>
                         <input type="text" name="User_Phone" value="{{user.Phone}}" hidden>
                       <!-- Hidden User Product Statuses -->
                        <input type="text" name="Status" value="Pending" hidden>
                        <input type="text" name="Updations" value="Never" hidden>
                        <input type="number" name="Carted" class="form-control" value="0" hidden>

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control">

                    <div class="row">
                       <div class="ml-3">
                            <label for=""> Actual Price</label>
                            <input type="number" name="Actual_Price" class="form-control ">
                        </div>
                        <div class=" ml-3  ">
                            <label for="">Offer Percentage</label> 
                            <input type="number" name="Offer_Percentage" class="form-control ">
                            
                            
                        </div>
                        <div class="ml-3">
                            <label for="">Offer Price</label>
                            <input type="number" name="Offer_Price" class="form-control">
                        </div>
                    </div>
                            
                    <label for="">Description</label>
                    
                    <textarea class="form-control" type="text"  name="Description" rows="3"></textarea>
                    
                    <label for="">Selling Address</label>
                    
                    <textarea class="form-control" type="text"  name="Selling_Address" rows="3"></textarea>

                    <label for="">Images: </label>
                    
                    <div id="imageContainer" class="col-lg-6">
                        <!-- Input for the first image -->
                        <input type="file" name="Image" class="form-control mb-2" onchange="viewImage(event)">
                        <!-- Placeholder for the first image -->
                        <img src="" alt="" style="width:100px; height:auto" id="imgView" class="pt-3">
                        
                    </div>
                    <div class="row">
                        <div class="mt-3 ml-auto">
                            <!-- Button to add more images -->
                        <button type="button" class="btn btn-primary mb-2" id="addImage"><i class="bi bi-plus-square"></i> Images</button>

                        </div>
                        <div class="ml-auto">
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-success mt-4">Submit</button>
                            
                        </div>
                        
                    </div>
                  
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event) {
        // Display the thumbnail image
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
        // Scroll down the page to show the 'addImage' button
        window.scrollTo(0, document.body.scrollHeight* 2);
    }

    document.getElementById('addImage').addEventListener('click', function () {
        var imageContainer = document.getElementById('imageContainer');
        var input = document.createElement('input');
        input.type = 'file';
        input.name = 'Image';
        input.className = 'form-control mb-2';
        imageContainer.appendChild(input);
        
        // Attach onchange event listener to the new input element
        input.addEventListener('change', function (event) {
            var img = document.createElement('img');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.width = '100px';
            img.style.height = 'auto';
            img.style.marginRight = '10px';
            imageContainer.appendChild(img);
            // Scroll down the page to show the 'addImage' button
            window.scrollTo(0, document.body.scrollHeight* 2);
        });
    });
</script>
